@page "/menu/{slug}"
@model ItemModel
@{
    ViewData["Title"] = "About";
}

<div class="container">
    <h1 class="mt-4 mb-3">
        @Model.Item.Name
    </h1>
    <hr />
    <h3>A Taste of Autumn.</h3>

    <div class="row">
        <div class="col-lg-8">
            <img class="img-fluid rounded" src="~/images/Menu/@Model.Item.ImageFile" alt="">
            <hr>
            <p>Available starting at 8:00 AM</p>
            <hr>
            <p class="lead">@Model.Item.Summary</p>
            <blockquote class="blockquote">
                <p class="mb-0">I feel at home every time I take a bite.</p>
                <footer class="blockquote-footer">
                    Actual customer
                    <cite title="Source Title">Happy Customer</cite>
                </footer>
            </blockquote>
            <p>@Model.Item.Description</p>
            <hr>
        </div>
        <div class="col-md-4">
            <vc:popular-brews count="2" />
            @await Component.InvokeAsync("PopularBrews", new { count = 2 })
        </div>
    </div>
</div>
